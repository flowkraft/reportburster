<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{dd/MM/yyyy HH:mm:ss} %p - %m%n"/>
      <Filters>
        <!-- Only show WARN and above by default -->
        <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
      </Filters>
    </Console>
  </Appenders>
  <Loggers>
    <!-- Your app logs at WARN to console only -->
    <Logger name="com.flowkraft" level="WARN" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <!-- Root logger: WARN to console only -->
    <Root level="WARN">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>