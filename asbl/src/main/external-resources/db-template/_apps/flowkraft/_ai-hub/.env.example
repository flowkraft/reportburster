# ============================================
# FlowKraft AI Crew - Environment Variables
# ============================================
# Copy this file to .env and customize for your environment

# ============================================
# Letta Configuration
# ============================================
OPENAI_API_KEY=
OPENAI_API_BASE=
OLLAMA_BASE_URL=http://flowkraft-ai-hub-ollama:11434
AUTO_APPROVE_SHELL_COMMANDS=false
LETTA_DB_PASSWORD=letta

# ============================================
# Matrix/Synapse Database Configuration
# ============================================
DB_USER=synapse
DB_PASSWORD=synapse

# ============================================
# Code Server Configuration
# ============================================
CODE_SERVER_PASSWORD=admin

# ============================================
# Letta API Configuration
# ============================================
LETTA_API_KEY=

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_AGENTS_CHAT_URL=http://localhost:8442

# ============================================
# Volume Paths (optional - defaults to ./folders)
# ============================================
PROJECTS_FOLDER_PATH=./projects
AGENTS_HQ_FOLDER_PATH=./agents

# ============================================
# Baibot Configuration
# ============================================
BAIBOT_SEND_N_NEWEST_MESSAGES=1
BAIBOT_CONFIG_FILE_PATH=/app/config.yml
BAIBOT_PERSISTENCE_DATA_DIR_PATH=/data

# ============================================
# Matrix Provisioner Configuration
# ============================================
# Matrix/Synapse homeserver URL (internal Docker network)
MATRIX_HOMESERVER_URL=http://flowkraft-ai-hub-matrix-synapse:8008
# Matrix server name (domain for user IDs)
MATRIX_SERVER_NAME=localhost
# Shared secret from homeserver.yaml (for automated user creation)
# Must match registration_shared_secret in config/synapse/homeserver.yaml
MATRIX_REGISTRATION_SECRET=6180e53cc7b443e691d1bfc93c83bf2d60c8ee90a0db4bb194d74db52dd6f6cd

# ============================================
# Chat2DB Jupyter Configuration
# ============================================
# Jupyter access token (change for production)
JUPYTER_TOKEN=reportburster
# Jupyter port (default 8441)
JUPYTER_PORT=8441
# Athena agent ID - set after creating agent in Letta
AGENT_ATHENA_ID=
# LLM model for direct API calls (if not using Letta agents)
LLM_MODEL_NAME=gpt-4o-mini
